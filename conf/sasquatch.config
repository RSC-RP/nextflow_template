// Settings to run the workflow on Sasquatch

//working directory for temporary/intermediate files produced in the workflow processes

params {
  assoc = null
}

workDir = "/data/hps/assoc/private/${params.assoc}/user/$USER/temp"

profiles{
    sasquatch {
        process.executor = 'slurm'
        process.queue = 'cpu-core-sponsored'
        process.clusterOptions = "--account cpu-${params.assoc}-sponsored --time=72:00:00"
        apptainer.enabled = false
        apptainer.autoMounts = true
        apptainer.cacheDir = "/data/hps/assoc/private/${params.assoc}/container/temp"
        apptainer.runOptions = '--containall --no-home'
        conda.enabled          = false
        docker.enabled         = false
        singularity.enabled    = true
        podman.enabled         = false
        shifter.enabled        = false
    }
}

executor {
    queueSize = 2000
}
